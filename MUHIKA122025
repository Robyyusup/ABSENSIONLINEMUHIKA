    <script>
        // --- Konfigurasi Firebase Anda ---
        // Ini adalah objek konfigurasi yang Anda dapatkan dari Firebase Console
        const firebaseConfig = {
            apiKey: "AIzaSyDrt5MHhs-Wjoye8swLwLb068HC4kme-rg",
            authDomain: "absensionlinemuhika.firebaseapp.com",
            databaseURL: "https://absensionlinemuhika-default-rtdb.firebaseio.com",
            projectId: "absensionlinemuhika",
            storageBucket: "absensionlinemuhika.firebasestorage.app",
            messagingSenderId: "109622927610",
            appId: "1:109622927610:web:0b5a6ab7e5bc3104f4e943",
            measurementId: "G-VYJ320SDRM" // Ini opsional, terkait Google Analytics
        };
        // Menginisialisasi Firebase aplikasi
        firebase.initializeApp(firebaseConfig);
        // Mendapatkan referensi ke Firebase Realtime Database
        const db = firebase.database();

        // --- Utilitas Tanggal ---
        /**
         * Menghitung tanggal awal minggu (Senin) dari tanggal yang diberikan.
         * @param {Date} date - Objek tanggal.
         * @returns {Date} Objek tanggal awal minggu.
         */
        function startOfWeek(date) {
            const d = new Date(date);
            d.setHours(0, 0, 0, 0); // Atur waktu ke 00:00:00
            const day = d.getDay(); // Dapatkan hari dalam seminggu (0 = Minggu, 1 = Senin, ..., 6 = Sabtu)
            // Hitung selisih untuk kembali ke hari Senin.
            // Jika hari ini Minggu (day === 0), kurangi 6 hari (untuk Senin minggu sebelumnya).
            // Jika hari lain, kurangi (day - 1) hari.
            const diff = d.getDate() - day + (day === 0 ? -6 : 1);
            return new Date(d.setDate(diff));
        }

        /**
         * Menghitung tanggal awal bulan dari tanggal yang diberikan.
         * @param {Date} date - Objek tanggal.
         * @returns {Date} Objek tanggal awal bulan.
         */
        function startOfMonth(date) {
            const d = new Date(date);
            d.setDate(1); // Atur tanggal ke hari pertama bulan
            d.setHours(0, 0, 0, 0); // Atur waktu ke 00:00:00
            return d;
        }

        // --- Hitung Kehadiran ---
        /**
         * Menghitung jumlah kehadiran dalam rentang tanggal tertentu.
         * @param {object} records - Objek catatan absensi untuk satu user.
         * @param {Date} start - Tanggal mulai rentang (inklusif).
         * @param {Date} end - Tanggal akhir rentang (inklusif).
         * @returns {number} Jumlah kehadiran dalam rentang.
         */
        function countAttendanceInRange(records, start, end) {
            let count = 0;
            // Iterasi melalui semua catatan absensi untuk user tertentu
            Object.values(records).forEach(record => {
                // Konversi string waktu ISO ke timestamp (milidetik)
                const timestamp = new Date(record.waktu).getTime();
                // Bandingkan timestamp dengan rentang awal dan akhir
                if (timestamp >= start.getTime() && timestamp <= end.getTime()) {
                    count++;
                }
            });
            return count;
        }

        // --- Tentukan Status Warna (Hijau/Kuning/Merah) ---
        /**
         * Menentukan kelas CSS status (hijau, kuning, merah) berdasarkan jumlah kehadiran.
         * @param {number} count - Jumlah kehadiran.
         * @param {string} type - Tipe perhitungan ('minggu' atau 'bulan').
         * @returns {string} Kelas CSS status.
         */
        function getStatusColor(count, type) {
            if (type === 'minggu') {
                if (count >= 5) return 'hijau'; // 5 kehadiran atau lebih = hijau (ideal)
                if (count >= 3) return 'kuning'; // 3-4 kehadiran = kuning (cukup)
                return 'merah'; // Kurang dari 3 kehadiran = merah (kurang)
            } else if (type === 'bulan') {
                if (count >= 20) return 'hijau'; // 20 kehadiran atau lebih = hijau (ideal)
                if (count >= 12) return 'kuning'; // 12-19 kehadiran = kuning (cukup)
                return 'merah'; // Kurang dari 12 kehadiran = merah (kurang)
            }
            return ''; // Default kosong
        }

        // --- Muat dan Tampilkan Data ---
        /**
         * Fungsi utama untuk memuat data absensi dari Firebase dan menampilkannya di tabel.
         */
        async function loadRekap() {
            const rekapBody = document.getElementById('rekapBody');
            const loadingMessage = document.getElementById('loadingMessage');
            rekapBody.innerHTML = ""; // Bersihkan isi tabel sebelum memuat data baru
            loadingMessage.style.display = 'block'; // Tampilkan pesan loading

            try {
                // Ambil snapshot data dari path 'absensi' di Firebase Realtime Database
                const snapshot = await db.ref('absensi').once('value');
                const data = snapshot.val(); // Dapatkan objek data

                // Jika tidak ada data, tampilkan pesan dan keluar
                if (!data) {
                    rekapBody.innerHTML = "<tr><td colspan='7'>Belum ada data absensi.</td></tr>";
                    loadingMessage.style.display = 'none';
                    return;
                }

                const now = new Date(); // Waktu saat ini
                const weekStart = startOfWeek(now); // Awal minggu ini
                const monthStart = startOfMonth(now); // Awal bulan ini

                // Iterasi melalui setiap userId dalam data absensi
                for (let userId in data) {
                    const userRecords = data[userId]; // Catatan absensi untuk user ini
                    // Temukan record terbaru untuk mendapatkan nama dan peran yang paling update
                    // Ini penting jika nama atau peran bisa berubah seiring waktu
                    const latestRecordKey = Object.keys(userRecords).sort().pop();
                    const latestRecord = userRecords[latestRecordKey];

                    const nama = latestRecord.nama || userId; // Gunakan nama dari record atau userId jika nama tidak ada
                    const role = latestRecord.role || "-"; // Gunakan peran dari record

                    // Hitung kehadiran mingguan dan bulanan
                    const hadirMinggu = countAttendanceInRange(userRecords, weekStart, now);
                    const hadirBulan = countAttendanceInRange(userRecords, monthStart, now);

                    // Dapatkan kelas warna status
                    const statusMinggu = getStatusColor(hadirMinggu, 'minggu');
                    const statusBulan = getStatusColor(hadirBulan, 'bulan');

                    // Buat elemen baris tabel baru
                    const tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td data-label="ID User">${userId}</td>
                        <td data-label="Nama">${nama}</td>
                        <td data-label="Peran">${role}</td>
                        <td data-label="Hadir Minggu Ini">${hadirMinggu}</td>
                        <td data-label="Status Mingguan"><span class="status-cell status-${statusMinggu}"></span></td>
                        <td data-label="Hadir Bulan Ini">${hadirBulan}</td>
                        <td data-label="Status Bulanan"><span class="status-cell status-${statusBulan}"></span></td>
                    `;
                    rekapBody.appendChild(tr); // Tambahkan baris ke tabel
                }
            } catch (error) {
                // Tangani error saat fetching data
                console.error("Error fetching data:", error);
                rekapBody.innerHTML = `<tr><td colspan='7'>Gagal memuat data: ${error.message}</td></tr>`;
            } finally {
                loadingMessage.style.display = 'none'; // Sembunyikan pesan loading setelah selesai (berhasil/gagal)
            }
        }

        // --- Jalankan Fungsi Saat Halaman Dimuat ---
        // Memastikan DOM sepenuhnya dimuat sebelum menjalankan skrip
        window.onload = loadRekap;
    </script>

</body>
